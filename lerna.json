{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": "master",
      "message": "chore: version bump [ci skip]"
    }
  },
  "changelog": {
    "labels": {
      "breaking": "Breaking Change",
      "bug": "Bug Fix",
      "enhancement": "Enhancement",
      "documentation": "Documentation",
      "internal": "Internal",
      "----": "----------------------",
      "fix": "Bug Fix",
      "feat":  "New Feature",
      "chore": "Chore Changes",
      "docs": "Documentation",
      "style": "Style Changes",
      "refactor": "Refactor Changes",
      "perf": "Performance Improvement",
      "test": "Tests Improvement"
    },
    "ignoreCommitters": [
      "infojav"
    ]
  }
}
